# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=true
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/architecture_diagrams
REDIS_URL=redis://localhost:6379/0

# AI/LLM Configuration
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here
LLM_PROVIDER=anthropic  # or 'openai'
LLM_MODEL=claude-3-5-sonnet-20241022  # or 'gpt-4-turbo-preview'

# Technical Conversation Detection
TECHNICAL_CONFIDENCE_THRESHOLD=0.7
CONVERSATION_CONTEXT_WINDOW_SIZE=50
CONVERSATION_TIME_WINDOW_MINUTES=10

# Microsoft Teams Bot
TEAMS_APP_ID=your_teams_app_id
TEAMS_APP_PASSWORD=your_teams_app_password
TEAMS_TENANT_ID=your_tenant_id

# Diagram Generation
PLANTUML_JAR_PATH=/usr/local/bin/plantuml.jar
DIAGRAM_STORAGE_PATH=/app/diagrams

# Security
SECRET_KEY=your-secret-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# File Upload
MAX_UPLOAD_SIZE_MB=10
